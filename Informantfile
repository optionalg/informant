command "passing", {
  :execute => "spec/support/checks/passing_check",
  :interval => 10
}
command "failing", {
  :execute => "spec/support/checks/failing_check"
}
command "unknown", {
  :execute => "spec/support/checks/unknown_check"
}

(1..30).each do |n|
node "app#{"%02d" % n}", {
  :address => "127.0.0.1",
  :commands => [
    "passing",
    "failing",
    "unknown"
  ]
}
end
