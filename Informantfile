email_notifier "me", {
  :from => "informant@example.com",
  :to => ["informanttester@gmail.com"]
}

command "passing", {
  :execute => "spec/support/checks/passing_check",
  :interval => 10,
  :notifiers => ["me"]
}
command "failing", {
  :execute => "spec/support/checks/failing_check",
  :notifiers => ["me"]
}
command "unknown", {
  :execute => "spec/support/checks/unknown_check",
  :notifiers => ["me"]
}
command "flapping", {
  :execute => "spec/support/checks/flapping_check",
  :notifiers => ["me"]
}

(1..30).each do |n|
node "app#{"%02d" % n}", {
  :address => "127.0.0.1",
  :commands => [
    "passing",
    "failing",
    "unknown",
    "flapping"
  ]
}
end
